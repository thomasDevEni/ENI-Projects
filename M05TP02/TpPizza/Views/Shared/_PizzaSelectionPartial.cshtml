@model TpPizza.Models.PizzaViewModel

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pizza.Id" class="control-label"></label>
                <input asp-for="Pizza.Id" class="form-control" />
                <span asp-validation-for="Pizza.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pizza.Nom" class="control-label"></label>
                <input asp-for="Pizza.Nom" class="form-control" />
                <span asp-validation-for="Pizza.Nom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pates" class="control-label"></label>
                <select asp-for="Pates" class="form-control" id="pate">
                    <option value="">Sélectionnez une Pâte</option>
                    @foreach (var pate in Model.Pates)
                    {
                        <option value="@pate">@pate</option>
                    }
                </select>
                <span asp-validation-for="Pates" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingredients" class="control-label"></label>
                <select asp-for="Ingredients" class="form-control" id="ingredients">
                    <option value="">Sélectionnez un Ingrédient</option>
                    @foreach (var ingredient in Model.Ingredients)
                    {
                        <option value="@ingredient">@ingredient</option>
                    }
                </select>
                <span asp-validation-for="Ingredients" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>